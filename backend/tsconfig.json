{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "src",
    "outDir": "dist",

    /* Environment */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "types": ["node"],

    /* Debug / Build */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Strict mode */
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}